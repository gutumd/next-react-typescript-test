{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@redux/*": ["redux/*"],
      "@components/*": ["components/*"],
      "@constants/*": ["constants/*"],
      "@containers/*": ["containers/*"],
      "@assets/*": ["assets/*"],
      "@helpers/*": ["helpers/*"],
      "@server/*": ["server/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "types.d.ts", "**/*.ts", "**/*.tsx", "redux/modal/action-creators.js", "constants/constants.js", "redux/books/action-creators.js", "redux/books/action-types.js"],
  "verbose": true,
  "ignore": ["node_modules", ".next"],
  "watch": ["server/**/*", "index.js"],
  "ext": "js json"
}
